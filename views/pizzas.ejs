<% include partials/header %>


    <div class="container">

        <header class="jumbotron">
            <div class="container">
                <h1 class="mx-auto my-0 text-uppercase"> Welcome to La Galerie!</h1>
                <p>View our handpicked arts from all over the world!</p>
                <p>
                   <a class="btn btn-primary btn-large" href="/pizzas/new">Contribute Your Art!</a>
                </p>
            </div>
        </header>


        <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <% pizzas.forEach(function(pizzas){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%=pizzas.image %>">
                        <div class="caption">
                            <h4>   <%= pizzas.name %>  </h4>
                        </div>
                        <p><a href="/pizzas/<%= pizzas._id %>" class = "btn btn-primary">More Info</a></p>
                    </div>
                </div>
            <% }); %>
        </div>
   </div>

<% include partials/footer %>
